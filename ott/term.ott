command, c :: 'c_' ::=
  | R E                      ::   :: relation
  | E = E'                   ::   :: unify
  | true                     ::   :: true
  | false                    ::   :: false
  | c /\ c'                  ::   :: and
  | c \/ c'                  ::   :: or
  | E ; c                    ::   :: step
  | let x , y = E in c       ::   :: let (+ bind x union y in c +)
  | ( c )                    :: S :: paren {{ icho ([[c]]) }}

subst, p {{ tex \rho }} {{ coq ρ }} :: 'p_'  ::= {{ coq (Assoc.assoc intro) }}
